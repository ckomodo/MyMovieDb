@page
@model MyMovieDb.Pages.Actors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.Movie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.MovieID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.MovieID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.PlayingAS)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.PlayingAS)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Casts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Movie Title</th>
                   
                </tr>
                @foreach (var item in Model.Actor.Casts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </td>                       
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Actor?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
